<!doctype HTML>
<html lang="en">
<%- include('layouts/header') -%>
<body>
<%- include('layouts/navBar') -%>
<!--main body-->
<main class="container">
    <div class="row justify-content-center align-items-center text-center d-flex mx-auto flex-center" style="margin-top: 140px; margin-bottom: 70px;">
        <div class="col-lg-10">
          <h1 class="mb-5 pb-3">Read About The Artist</h1>
        </div>
        <% for(i=0; i < user.length; i++) { %> 
            <section class="col-md-6 mb-3">
                <h2 class="md-2"><%= user[i].fName %> <%= user[i].lName %></h2>
                <h3><%= user[i].username %></h3>
                <p>
                    Member Since: <%= user[i].joinedDate.toLocaleString() %>
                </p>
                <p class="lead">
                    <%= user[i].bio %>
                </p>
                <a href="mailto:<%= user[i].email %>" class="btn btn-primary mt-2">Email Me</a>
            </section>
            <div class="col-md-6 mb-3">
                <img src="https://plus.unsplash.com/premium_photo-1673676884428-ad8c7271c16e?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
                    class="img-fluid shadow-lg rounded"
                    alt="<%= user[i].username %>">
            </div>
        <% } %>
    </div>
</main>
<!--main body-->

</body>
<!--scripts-->
<%- include('layouts/scripts') -%>
</html>