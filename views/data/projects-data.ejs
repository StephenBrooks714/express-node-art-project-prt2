<% if(projects == "") { %>
    <div class="row justify-content-center align-items-center text-center" style="height: 60vh;">
        <div class="col-lg-8">
            <h1>No Projects Posted Yet.</h1>
            <p class="lead">
                Please check back regularly for updates.
            </p>
        </div>
    </div>
<% } else { %>
    <div class="row justify-content-center align-items-center text-center" style="margin-top: 130px; margin-bottom: 70px;">
        <div class="col-md-12">
            <h1>Welcome To My Studio</h1>
            <p class="mb-4">
                A gallery of work and Designs for Everyone To Share.
            </p>
        </div>
        <% for(i=0; i < projects.length; i++) { %>
            <div class="col-lg-3 col-md-6 col-sm-12 zoom mb-3">
                <a href="/project/<%= projects[i]._id %>">
                    <h2 class="h4 mb-3"><%= projects[i].title %></h2>
                    <img src="<%= projects[i].image %>" alt="<%= projects[i].title %>"
                         class="img-fluid shadow-lg rounded"
                    />
                </a>
            </div>
        <% } %>
    </div>
<% } %>