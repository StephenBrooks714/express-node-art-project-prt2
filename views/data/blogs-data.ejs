<% if(blogs == "") { %>
    <div class="row justify-content-center align-items-center text-center" style="height: 60vh;">
        <div class="col-lg-8">
            <h1>No Articles Posted Yet.</h1>
            <p class="lead">
                Please check back regularly for updates.
            </p>
        </div>
    </div>
<% } else { %>
        <div class="row justify-content-center align-items-center text-center" style="margin-top: 130px; margin-bottom: 70px;">
            <% for(i=0; i < blogs.length; i++) { %>
                <div class="col-lg-3 col-md-6 col-sm-12 zoom mb-3">
                    <a href="/post/<%= blogs[i]._id %>">
                        <h2 class="h4 mb-3"><%= blogs[i].title %></h2>
                        <img src="<%= blogs[i].image %>" alt="<%= blogs[i].title %>"
                             class="img-fluid shadow-lg rounded"
                        />
                    </a>
                </div>
            <% } %>
        </div>
<% } %>