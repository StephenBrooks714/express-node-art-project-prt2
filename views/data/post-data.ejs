<div class="container" style="margin-top: 100px; margin-bottom: 70px;">

    <!--Section: Content-->
    <section class="text-justify">
        <h1 class="font-weight-bold mb-3"><%= post.title %></h1>
        <% if(loggedIn){ %>
            <a href="/delete/post/<%= post._id %>" class="btn btn-warning rounded-pill mb-2">delete post</a>
        <% } %>
        <p>
            <strong>Posted By:</strong> <a href="/profile/<%= post.userid._id %>"><%= post.userid.username %></a> on <%= post.datePosted.toLocaleString() %>
        </p>

        <p class="font-weight-bold">
            <%= post.body %>
        </p>

        <figure class="figure">
            <img src="<%= post.image %>" class="figure-img img-fluid z-depth-1"
                 alt="<%= post.title %>">
            <figcaption class="figure-caption"><%= post.summary %></figcaption>
        </figure>

    </section>
    <!--Section: Content-->

</div>